<div class="upper-container">
  <h2>Create any list of your favourite movies!</h2>
</div>

<div class="lists-container">
  <div class="create-list-class">
  <div class="header-list-index">
    <h4>My Lists</h4>
  </div>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-flat" %>
    <br>
      <% @lists.each do |list| %>

        <%=link_to list.name, list_path(list)%>
      <% end %>
  </div>
</div>
